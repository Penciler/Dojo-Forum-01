<h1> User edit page </h1>

<% if current_user.role = 'admin' %>
	<%= form_for [:admin, @user] do |f| %>
		<div class="form-group">
			<%= f.label :role, "User role: " %>
			<%= f.text_field :role, class: "form-control" %>
		</div>

		<%= f.submit class: "actions btn btn-primary" %>
	<% end %>
<% end %>