<h1>User show page</h1>

<ul>
	<li><%= @user.avatar %></li>
	<li><%= 'Name: ' %><%= @user.name %></li>
	<li><%= 'Description: ' %><%= @user.description %></li>
</ul>

<h2>Posts</h2>

<% @posts.each do |post| %>
	<ul>
		<li><%=post.title %></li>
	</ul>
<%end%>

<h2>Replied posts</h2>

<% @replies.each do |reply| %>
	<ul>
		<li><%= Post.find(reply.post_id).title %></li>
	</ul>
<% end %>