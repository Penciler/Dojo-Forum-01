<h1>Post edit page</h1>

<%= form_for [@post] do |f| %>
	<div class="form-group">
		<%= f.label :title, "Title: " %>
		<%= f.text_field :title, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :content, "Content: " %>
		<%= f.text_area :content, class: "form-control" %>
	</div>

	<%= f.submit class: "actions btn btn-primary" %>
<%end%>